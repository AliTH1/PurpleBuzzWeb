@using PurpleBuzzWeb.Models;
@model TeamMember

<form style="width: 250px;" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" placeholder="Enter work category name">
        <span class="text text-danger" asp-validation-for="FullName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Profession"></label>
        <input asp-for="Profession" class="form-control" placeholder="Enter profession">
    </div>

    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input asp-for="ImagePath" class="form-control" placeholder="Enter work category name">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <button class="btn btn-inverse-outline-dark" asp-action="Index">Go back</button>
</form>