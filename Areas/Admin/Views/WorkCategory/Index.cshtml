@using PurpleBuzzWeb.Models;
@model ICollection<WorkCategory>
@{
    int count = 1;
}


<div class="d-flex justify-content-end">
    <a class="btn btn-success" asp-controller="WorkCategory" asp-action="Create">Create</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">IsDeleted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WorkCategory workCategory in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@workCategory.Name</td>
                <td>@workCategory.IsDeleted</td>



                <td>
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-info text-light ml-3" asp-action="Update" asp-route-id="@workCategory.Id">Update</a>
                        <a class="btn btn-danger text-light ml-3" asp-action="Delete" asp-route-id="@workCategory.Id">Delete</a>
                    </div>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>